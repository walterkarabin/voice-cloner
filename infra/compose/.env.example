# Docker Compose Environment Variables

# GPU Configuration
CUDA_VISIBLE_DEVICES=0

# Service Modes (mock or real)
# Mock mode: No models, fast startup, for testing
# Real mode: Requires models, GPU recommended, production quality

# STT Whisper
STT_MODEL_SIZE=small  # tiny, base, small, medium, large

# Rewriter LLM
LLM_MODEL_PATH=/models/llama-3-8b.gguf  # Path to GGUF model file

# TTS Streamer
TTS_USE_MOCK=true  # Set to false for real TTS
TTS_MODEL_NAME=tts_models/en/vctk/vits

# Vocoder
VOCODER_USE_MOCK=true  # Set to false for Griffin-Lim or HiFi-GAN
VOCODER_USE_GRIFFIN_LIM=false  # Set to true for Griffin-Lim (no model needed)

# Network
NETWORK_MODE=bridge
